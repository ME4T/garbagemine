<div class="container thing-show">
    <div class="row">
        <div class="col-md-12">
            <p id="notice"><%= notice %></p>
        </div>
    </div>









    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default thing-panel">
                <div class="panel-heading">
                    <span class="ancestor-count has-tooltip" data-tooltip="Ancestors">
                        <span class="glyphicon glyphicon-circle-arrow-up"></span>
                        <%= @thing.ancestors.count-1 %>
                    </span>
                    <span class="child-count has-tooltip" data-tooltip="Children" >
                        <span class="glyphicon glyphicon-circle-arrow-down"></span>
                        <%= @thing.children.count-1 %>
                    </span>
                    <span class="pull-right">
                        <%= @thing.created_at.strftime('%c') %>
                    </span>
                </div>
                <div class="panel-body">
                    <%= image_tag @thing.image.url %>
                </div>
                <div class="panel-footer clearfix">
                    <%= link_to 'Recycle', new_thing_path(:parent => @thing.id), {:class => "btn btn-primary btn-sm "} %> 

                    <span class="pull-right">
                        <%= render partial: "things/vote", locals: {thing: @thing} %>
                    </span>
                </div>
            </div>

        </div>
    </div>






    <div class="row ancestors">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Ancestors</h2>
                </div>
                <div class="panel-body">
                    <% if @thing.ancestors.count>1 %>
                        <div class="row">
                            <% @thing.ancestors.each do |ancestor| %>
                                <% if ancestor.id != @thing.id %>
                                    <a href="/things/<%= ancestor.id %>" class="col-xs-2 col-md-1 thing-small">
                                        <%= image_tag ancestor.image.url(:thumb) %>
                                    </a>
                                <% end %>
                            <% end %>
                        </div>
                    <% else %>
                        No Ancestors
                    <% end %>
                </div>

            </div>
        </div>





        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Children</h2>
                </div>
                <div class="panel-body">
                    <% if @thing.children.count>1 %>
                            <div class="row">
                                <% @thing.children.each do |child| %>
                                    <% if child.id != @thing.id %>
                                        <a href="/things/<%= child.id %>" class="col-xs-3 col-sm-2 col-md-1 thing-small">
                                            <%= image_tag child.image.url(:thumb) %>
                                        </a>
                                    <% end %>
                                <% end %>
                            </div>
                    <% else %>
                        No children
                    <% end %>
                </div>

            </div>
        </div>

    </div>





</div>