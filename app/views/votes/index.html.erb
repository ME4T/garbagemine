<h1>Listing votes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Thing</th>
      <th>Creative</th>
      <th>Beautiful</th>
      <th>Inspiring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.user_id %></td>
        <td><%= vote.thing_id %></td>
        <td><%= vote.creative %></td>
        <td><%= vote.beautiful %></td>
        <td><%= vote.inspiring %></td>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_vote_path %>
